<div style="margin-bottom: 10px">
  <form
    role="form"
    style="padding-bottom: 1px; {{! no stripe of background_content color mobile }}
    ">

    {{!-- ================ SOCIAL PICTURE && TEXT AREA ================ --}}
    <div
      class="
        flexbox
        align-items-flex-end
        ">
        <span class="align-items-flex-start">
          <img
            src="{{picture}}"
            width="40px"
            style="
              margin-right: 10px;
              border-radius: 3px;
              border: 1px solid lightgrey;
            ">
          </img>
        </span>
      <span class="flex-grow-2">
        <textarea
          class="form-control comment_form_textarea_width"
          id="comment_form_textarea"
          rows="1"
          style="width: 100%; font-size: 16px"
          name="txt"
          type="text"
          maxlength="400"
          {{!-- placeholder="Submit your own opinions here. Shorter is better - break up your ideas. You are not responding to anyone else directly - comments are sent out randomly to all participants."  --}}
          placeholder="Share your perspective..."
          {{#if shouldAutofocusOnTextarea}}autofocus{{/if}}
          ></textarea>
      </span>
    </div>

   {{!-- ================ PROTIPS ================ --}}
    <div
      id="comment_form_controls"
      style="display: none"
      class="
        flexbox
        align-items-flex-end
        comment_form_control_hideable
      ">

      <span style="" class="flex-grow-1;"> {{! protips column }}
        <div
          id="not_a_reply_message"
          class="protip"
          >
          <i
            class="fa fa-lightbulb-o"
            style="font-size: 24px;
            ">
          </i>
          <span style="">
            <strong>
              pro tip:
            </strong>
            comments are sent to others randomly. You are not replying directly to anyone else.
          </span>
        </div>
        <div
          id="one_idea_per_comment_message"
          class="protip"
          style="
            display: none;

            ">
            Write one comment per idea.
        </div>
        <div
          id="commentNotQuestionAlert"
          class="protip"
          role="alert"
          style="
            display:none;
            ">
            <p>
              Comments should make statements rather than ask questions. Participants will agree or disagree with the statements you make.
            </p>
        </div>
        <div
          id="commentSentAlert"
          class="protip"
          style="display:none"
          role="alert">
          <p>
            <strong> Comment Sent! </strong>
          </p>
        </div>
        <div
          id="commentTooLongAlert"
          class="protip"
          style="display:none"
          role="alert">
          <p>
            <strong> Comment is too long. </strong>
          </p>
        </div>
        <div
          id="commentSentDemoAlert"
          class="protip"
          style="display:none"
          role="alert">
          <p>
            <strong> Comment Sent!</strong> (not really, this is a demo)
          </p>
        </div>
      </span> {{! end protips column}}

   {{!-- ================ CHARACTER COUNT && BUTTON ================ --}}
      <span
        id="commentCharCount"
        style="
          color: gray;
          position: relative;
          top: -9px;"
        class="
          comment_form_control_hideable
          flex-grow-2
        ">
      </span>
      <button
        class="
          Btn
          Btn-primary
          flex-grow-2"
        id="comment_button"
        type="submit"
        style="
          text-transform: none;
          font-size: 16px;
          font-weight: 500;
          border: none;
          border-radius: 4px;
          background-color: #3498db;
          color: white;
          letter-spacing; 0.07em;
          margin-left: 5px;
          padding-right:12px;
          padding-left:10px;{{!-- margin-top: 10px --}}
          ">
        Submit
      </button>
    </div> {{! end protips/button flexbox}}
  </form>
</div>