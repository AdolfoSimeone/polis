<section class="container">
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    {{#if ownername}}
    <p>This conversation was started by {{ownername}}</p>
    {{else}}
    </br>
    {{/if}}
  {{#if create}}

    <h1 class="HeadingA">
      {{#if showEmailWelcome}}
      Email verified, create your account:
      {{else}}
      Join the conversation
      {{/if}}
    </h1>

    {{#if conversation_id}}
    <p> To participate in this conversation, you'll need to create a Polis account. </p>
    {{/if}}
    {{#if showEmailWelcome}}
    {{/if}}
    <form role="form" class="FormVertical">
      <div class="FormVertical-group">
        <label class="FormLabel" for="gatekeeperNameCreate">Full Name</label>
        <input type="text" id="hname" name="hname" id="gatekeeperNameCreate" class="FormControl">
      </div>
      <div class="FormVertical-group">
        <label class="FormLabel" for="gatekeeperEmailCreate">Email</label>
        <input type="text" id="email" name="email" id="gatekeeperEmailCreate" class="FormControl" {{#if readonlyEmail}}readonly{{/if}}>
      </div>
      <div class="FormVertical-group">
        <label class="FormLabel" for="gatekeeperPasswordCreate">Password</label>
        <input type="password" id="password" name="password" id="gatekeeperPasswordCreate" class="FormControl">
      </div>
      <div class="FormVertical-group">
        <input type="checkbox" name="gatekeeperTosPrivacy" id="gatekeeperTosPrivacy" style="position: relative; top: -1px"> &nbsp; By signing up, you agree to our <a href="https://pol.is/tos"> terms of use</a> and <a href="https://pol.is/privacy"> privacy policy </a> .
      </div>
      <div class="row" id="errorDiv"> </div>
      <div class="FormVertical-group">
        <button type="submit" class="Btn Btn-primary">Create New Account</button>
      </div>
    </form>
  {{else}}
    <h1 class="HeadingA">Sign in</h1>
    {{#if conversation_id}}
    <p> To participate in this conversation, you'll need to sign in with a Polis account. </p>
    {{/if}}
    <form role="form" class="FormVertical">
      <div class="FormVertical-group">
        <label class="FormLabel" for="gatekeeperLoginEmail">Email</label>
        <input type="text" id="email" name="email" id="gatekeeperLoginEmail" class="FormControl">
      </div>
      <div class="FormVertical-group">
        <label class="FormLabel" for="gatekeeperLoginPassword">
          Password
        </label>
        <input type="password" id="password" name="password" id="gatekeeperLoginPassword" class="FormControl">
        <a href="/pwresetinit" class="FormLink">Forgot your password?</a>
      </div>

      <div class="row" id="errorDiv"></div>
      <div class="FormVertical-group">
        <button type="submit" class="Btn Btn-primary">Sign In</button>
      </div>
    </form>



  {{/if}}
  {{#unless hideHaveAccount}}
    <div class="SwitchForms">
      <span class="SwitchForms-text">OR</span>
      <div class="SwitchForms-submit">
        {{#if create}}
          <button class="gotoSignIn Btn Btn-alt">I have an account and need to sign in</button>
        {{else}}
          <button class="gotoCreate Btn Btn-alt">Create new account</button>
        {{/if}}
      </div>
    </div>
    {{/unless}}
  </div> <!-- span -->
</div> <!-- row -->
</section> <!-- container -->
