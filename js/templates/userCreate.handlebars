<section class="container">
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <h1>Welcome to Polis</h1>
    {{#if zid}}
    <p>This conversation was started by {{ownername}}</p>
    {{else}}
  </br>
    {{/if}}
  {{#if create}}

    {{#if zid}}
    <p> To participate in this conversation, you'll need to create a Polis account. </p>
    {{/if}}
    <form role="form" class="well">
      <div class="form-group">
        <label for="gatekeeperNameCreate">Full Name</label>
        <input type="text" name="hname" placeholder="Full Name" id="gatekeeperNameCreate" class="form-control">
      </div>
      <div class="form-group">
        <label for="gatekeeperEmailCreate">Email</label>
        <input type="text" name="email" placeholder="Email" id="gatekeeperEmailCreate" class="form-control">
      </div>
      <div class="form-group"> 
        <label for="gatekeeperPasswordCreate">Password</label>
        <input type="password" name="password" placeholder="Password" id="gatekeeperPasswordCreate" class="form-control">
      </div>
      <div class="row" id="errorDiv"> </div>
      <button type="submit" class="btn btn-primary btn-lg"> Create New Account </button>
    </form>
  {{else}}
    {{#if zid}}
    <p> To participate in this conversation, you'll need to sign in with a Polis account. </p>
    {{/if}}
    <form role="form" class="well">
      <div class="form-group">
        <label for="gatekeeperLoginEmail">Email</label>
        <input type="text" name="email" placeholder="Email" id="gatekeeperLoginEmail" class="form-control">  
      </div>
      <div class="form-group"> 
        <label for="gatekeeperLoginPassword">Password</label>
        <input type="password" name="password" placeholder="Password" id="gatekeeperLoginPassword" class="form-control">  
      </div>

      <div class="row" id="errorDiv"></div>
      <button type="submit" class="btn btn-primary btn-lg"> Sign In </button>
      <div style="margin-top:10px;"><a href="/pwresetinit">Forgot your Password?</a></div>
    </form>
    


  {{/if}}
    <div class="rel">
      <span class="alternateRegOr">OR</span>
      <div class="alternateReg">
        {{#if create}}
          <button class="gotoSignIn btn btn-default">I have an account and need to sign in.</button>
        {{else}}
          <button class="gotoCreate btn btn-default">Create new account</button>
        {{/if}}
      </div>
    </div>
  </div> <!-- span -->
</div> <!-- row -->
</section> <!-- container -->