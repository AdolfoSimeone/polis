<section class="container">
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    {{#if ownername}}
    <p>This conversation was started by {{ownername}}</p>
    {{else}}
    </br>
    {{/if}}
  {{#if create}}

    <h1 class="primary-heading">Join the conversation</h1>
    {{#if sid}}
    <p> To participate in this conversation, you'll need to create a Polis account. </p>
    {{/if}}
    <form role="form" class="form-vertical">
      <div class="form-group">
        <label class="form-label" for="gatekeeperNameCreate">Full Name</label>
        <input type="text" id="hname" name="hname" id="gatekeeperNameCreate" class="form-control">
      </div>
      <div class="form-group">
        <label class="form-label" for="gatekeeperEmailCreate">Email</label>
        <input type="text" id="email" name="email" id="gatekeeperEmailCreate" class="form-control">
      </div>
      <div class="form-group">
        <label class="form-label" for="gatekeeperPasswordCreate">Password</label>
        <input type="password" id="password" name="password" id="gatekeeperPasswordCreate" class="form-control">
      </div>
      <div class="row" id="errorDiv"> </div>
      <button type="submit" class="btn-primary">Create New Account</button>
    </form>
  {{else}}
    {{#if sid}}
    <p> To participate in this conversation, you'll need to sign in with a Polis account. </p>
    {{/if}}
    <form role="form" class="form-vertical">
      <div class="form-group">
        <label class="form-label" for="gatekeeperLoginEmail">Email</label>
        <input type="text" id="email" name="email" id="gatekeeperLoginEmail" class="form-control">
      </div>
      <div class="form-group">
        <label class="form-label" for="gatekeeperLoginPassword">
          Password
        </label>
        <input type="password" id="password" name="password" id="gatekeeperLoginPassword" class="form-control">
        <a href="/pwresetinit" class="forgot-password pull-right">Forgot your password?</a>
      </div>

      <div class="row" id="errorDiv"></div>
      <button type="submit" class="btn-primary">Sign In</button>
    </form>



  {{/if}}
    <div class="rel">
      <span class="alternateRegOr">OR</span>
      <div class="alternateReg">
        {{#if create}}
          <button class="gotoSignIn btn-alt">I have an account and need to sign in</button>
        {{else}}
          <button class="gotoCreate btn-alt">Create new account</button>
        {{/if}}
      </div>
    </div>
  </div> <!-- span -->
</div> <!-- row -->
</section> <!-- container -->
