<div>
  <div style="font-style: italic; padding-top: 10px;">
    {{count}} votes
  </div>
  <div style="margin-top: 15px;">
    {{txt}}
  </div>
  <div class="flexbox justify-content-space-between">
    {{#if showAccept}}
      <button id="accept" class="Btn Btn-moderateAccept"> Accept </button>
    {{/if}}
    {{#if showReject}}
      <button id="reject" class="Btn Btn-moderateReject"> Reject </button>
    {{/if}}
  </div>
</div>