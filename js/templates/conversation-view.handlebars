<div id="controlTabs" class="row"> <!-- may get no-gutter class on xs -->
  <!-- overflow:hidden Since we remove the overflow:hidden on the carousel, and have to hide it at some layer to prevent the whole page becoming super wide. -->
  <div class="t-span6 col-xs-12 col-sm-6 col-md-5 col-lg-4">
  <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#commentView" id="commentViewTab" data-toggle="tab">
          {{#ifNotIE8}}<i class="icon-align-justify"></i>{{/ifNotIE8}} 
          Read &amp; React
        </a>
      </li>
      <li>
        <a href="#commentForm" id="commentFormTab" data-toggle="tab">
          {{#ifNotIE8}}<i class="icon-pencil"></i>{{/ifNotIE8}}
          Write
        </a>
      </li>
      <li>
        <a href="#analyze" id="analyzeTab" data-toggle="tab">
          {{#ifNotIE8}}<i class="icon-coffee"></i>{{/ifNotIE8}}
          Analyze
        </a>
      </li>
    </ul>

    <span id="vis_sibling_above_tab_content"></span>

    <div class="tab-content">
      <div class="tab-pane active" id="commentView">
        {{view commentView}}
      </div>
      <div class="tab-pane" id="commentForm">
        {{view commentForm}}
      </div>
      <div class="tab-pane" id="analyze">
      <!-- BEGIN PILLS -->
        <div class="tabbable">
          {{#if hasMetadata}}
          <ul class="nav nav-pills nav-justified">
            <li class="active"><a href="#query_results_hiddenxs" id="query_results_pill" data-toggle="tab">Comments</a></li>
            <li><a href="#metadata_eyes" id="metadata_pill" data-toggle="tab">Participant Info</a></li>
          </ul>
          {{/if}}
          <div class="tab-content">
            <div class="tab-pane active" id="query_results_hiddenxs">
              {{view analyzeGlobalView}}
              <div class="query_results_div" class="hidden-xs">
              </div> <!-- query results div -->
            </div>
            <div class="tab-pane" id="metadata_eyes">
              <div class="alert alert-info alert-dismissable" style="margin-top: 20px">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <p> All participants are shown by default. Clicking on an answer below will cause participants who chose that answer to fade out. This makes it easier to identify patterns of agreement and disagreement in those participants who remain. </p>
              </div>
              {{view metadataQuestionsView}}
            </div>
          </div>      
        </div> <!-- END PILLS -->
      </div> <!-- analyze tab pane -->
    </div> <!-- tab content -->
  </div> <!-- tabbable -->
  </div> <!-- span 4 -->

  <span id="vis_sibling_bottom" class="t-span6 col-sm-6 col-md-7 col-lg-8">
    <div id="visualization_div" class="vis_container"></div>
  </span>

  <div id="raphael_div">

</div> <!-- row -->
