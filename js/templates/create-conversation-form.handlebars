<section class="container">

	<div class="col-sm-12 col-md-12" style="margin-bottom: 20px;">
		<h4 style="display:inline">Create a conversation </h4>
		<h5 style="display:inline; font-weight:100"><em>(all fields optional)</em></h5>
	</div>
	<div class="createConversationForm col-sm-6 col-md-6">

		<form class="well conversationsForm" role="form">
			<div class="control-group">
				<label for="topic"> Topic </label>
				<input style="width: 90%" maxlength="35" id="topic" type="text" name="topic" placeholder="Topic - e.g. Legalization" value="{{topic}}" class="form-control">	
			</div>
			<div class="control-group">
				<label for="description"> Description & Question</label>
				<textarea style="width: 90%" type="text" maxlength="300" class="form-control" name="description" placeholder="Description & Question - e.g. Washington and other US states are legalizing, or at least decriminalizing, marijuana. Should this trend continue? Should it stop at marijuana, or should legalization extend to other presently illegal drugs as well?" rows="7">{{description}}</textarea>
			</div>
			
		  <div class="checkbox">
		    <label>
		      <input type="checkbox" checked=""> Invite Only
		    </label>
		  </div>
			<button class="btn btn-success submitButton btn-lg" name="formAction" type="submit" value="publish">Create</button>
			<div class="row" id="errorDiv"> </div>
			<input type="hidden" name="id" id="id" value="{{id}}" class="form-control">
		</form>

