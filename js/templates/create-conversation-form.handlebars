	<div class="span12">
		<h3> Share this link with participants to invite them to the conversation: {{url_name}} </h3> 
	</div> 


	<div class="span6 createConversationForm">
		<input type="hidden" name="id" id="id" value="{{id}}"/>

		<form class="form-horizontal conversationsForm">
			<div class="control-group">
			  	<label for="topic" class="control-label">Topic</label>
			  	<div class="controls">
			  		<input type="text" name="topic" placeholder="Topic" value="{{topic}}"/>
				</div>
			</div>
		  	<div class="control-group">
			  	<label for="description" class="control-label">Description</label>
			  	<div class="controls">
			  		<textarea type="text" name="description" placeholder="Description" rows="8">{{description}}</textarea>
				</div>
			</div>

