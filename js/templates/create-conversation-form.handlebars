<section class="container">
<div class="row">

	<div class="col-sm-12 " style="margin-bottom: 20px; margin-top: 15px;">
		<h4 style="display:inline">Create a conversation </h4>
		<h5 style="display:inline; font-weight:100"><em>(all fields optional)</em></h5>
	</div>
	<div class="createConversationForm col-sm-6 ">
		<form class="well conversationsForm" role="form">
			<div class="control-group">
				<label for="topic"> Topic </label>
				<input style="width: 90%" maxlength="35" id="topic" type="text" name="topic" value="{{topic}}" class="form-control">
			</div>
			<div class="control-group">
				<label for="description" style="margin-top:20px"> Description & Question</label>
				<textarea style="width: 90%" type="text" maxlength="300" class="form-control" name="description" id="description" rows="7">{{description}}</textarea>
			</div>
			
		  <div class="checkbox">
		    <label>
		      <input type="checkbox" id="is_public" name="is_public"> Short URL (easily typeable, less secure)
		    </label>
		  </div>
			<button class="btn btn-success submitButton btn-lg" name="formAction" type="submit" value="publish">Create</button>
			<div class="row" id="errorDiv"> </div>
			<input type="hidden" name="id" id="id" value="{{id}}" class="form-control">
		</form>

