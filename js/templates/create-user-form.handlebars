{{!--     <div class="SwitchForms">
      <span class="SwitchForms-text">OR</span>
    </div> --}}

    {{#if showEmailWelcome}}
    {{else}}
    {{!-- <h3 class="HeadingC" style="text-align:center; border: none;">Sign up with your email address</h3> --}}
    {{/if}}
    <form role="form" class="FormVertical">
      <div class="FormVertical-group">
        <label style="float:left" class="FormLabel" for="gatekeeperNameCreate" >Your name</label>
        <input tabindex="1" type="text" id="hname" name="hname" id="gatekeeperNameCreate" class="FormControl">
      </div>
      <div class="FormVertical-group">
        <label style="float:left" class="FormLabel" for="gatekeeperEmailCreate">Email</label>
        <input tabindex="2" type="text" id="email" name="email" id="gatekeeperEmailCreate" class="FormControl" {{#if readonlyEmail}}readonly{{/if}}>
      </div>
      <div class="FormVertical-group">
        <label style="float:left" class="FormLabel" for="gatekeeperPasswordCreate">Password</label>
        <input tabindex="3" type="password" id="password" name="password" id="gatekeeperPasswordCreate" class="FormControl">
      </div>
      <div class="FormVertical-group">
        <input tabindex="4" type="checkbox" name="gatekeeperTosPrivacy" id="gatekeeperTosPrivacy" style="position: relative; top: -1px"> &nbsp; By signing up, you agree to our <a href="https://pol.is/tos" tabindex="110" > terms</a> and <a href="https://pol.is/privacy" tabindex="111" > privacy</a> policy.
      </div>
      <div class="row" id="errorDiv"> </div>
      <div class="FormVertical-group text-center">
        <button tabindex="5" type="submit" class="Btn Btn-primary" style="display:inline-block">Sign up</button>
        {{!-- <button tabindex="5" type="submit" class="Btn Btn-primary" style="display:inline-block">Create your pol.is account</button> --}}
      </div>
      <div style="margin-bottom: 30px" class="text-center">Already have an account? <a tabindex="6" id="login-link-signup-email" href="/user/login" class="js-link" data-section="signup-select">Log in</a>
    </form>

    </div>

  {{else}}
    {{!-- <h1 class="HeadingA">Sign in</h1> --}}
    {{#if conversation_id}}
    <p> To participate in this conversation, you'll need to sign in with a Polis account. </p>
    {{/if}}

    {{!-- <div class="fb-login-button" data-max-rows="1" data-size="large" data-show-faces="false" data-auto-logout-link="false"></div> --}}

    <form role="form" class="FormVertical">
      <div class="FormVertical-group">
        <label style="float:left" class="FormLabel" for="gatekeeperLoginEmail">Email</label>
        <input tabindex="1" type="text" id="email" name="email" id="gatekeeperLoginEmail" class="FormControl">
      </div>
      <div class="FormVertical-group">
        <label style="float:left" class="FormLabel" for="gatekeeperLoginPassword">Password</label>
        <a tabindex="4" style="float:right; font-size:75%;" href="/pwresetinit">Forgot password</a>
        <input tabindex="2" type="password" id="password" name="password" id="gatekeeperLoginPassword" class="FormControl">
      </div>

      <div class="row" id="errorDiv"></div>
      <div class="FormVertical-group text-center">
      	{{#if linkMode}}
	        <button tabindex="3" class="Btn Btn-primary" id="connectFb">Connect your facebook account</button>
        {{else}}
	        <button tabindex="3" type="submit" class="Btn Btn-primary" id="loginBtn">Log In</button>
        {{/if}}
      </div>
	  {{#unless linkMode}}
        <p class="primary text-center">Don't have an account?      <a tabindex="5" id="login-link-signup-email" href="/user/create" class="js-link" data-section="signup-select">Sign up</a>
   	  {{/unless}}
    </form>


    </p>

  {{/if}}
  {{#unless hideHaveAccount}}
