<section class="container" style="margin-bottom: 30px;">
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    {{#if ownername}}
    <p style="font-style: italic;">This conversation was started by {{ownername}}</p>
    {{else}}
    </br>
    {{/if}}

{{#if fb}}
<div style="text-align:center">
	{{#if linkMode}}
		<div id="connectFbExplain" class="panel panel-info">
		  <div class="panel-heading">matching pol.is account already exists</div>
		  <div class="panel-body">
			A pol.is account exists with the email address associated with this Facebook account. To enable seamless Facebook logins with this existing pol.is account, enter your pol.is password below.
		  </div>
		</div>
		</div>
	{{else}}
		<div class="facebook-button" style="color:#fff" id="login-button-login-fb" tabindex="100" >
		        <span style="
		  width: 22px;
		  height: 22px;
		  left: 25px;
		  position: absolute;
		  top: 8px;
		  content: '';
		  background-image: url(data:image/svg+xml;base64,)
		"></span>Log in with Facebook</div>

    {{!-- <div><a href="/api/v3/twitterBtn?dest=/2demo">twitter</a></div> --}}
	{{/if}}
{{/if}}

{{#if social}}
	{{#unless linkMode}}
	    <div class="SwitchForms" id="socialOr">
	      <span class="SwitchForms-text">or</span>
	      <div class="SwitchForms-line"></div>
	    </div>
    {{/unless}}
{{/if}}

  {{#if create}}

      {{#if showEmailWelcome}}
	    <h1 class="HeadingA">
	      Email verified, create your account:
	    </h1>
      {{else}}
      {{/if}}

