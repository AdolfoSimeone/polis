        {{/if}}
      </div>
    </div> --}}
    {{/unless}}

{{#if social}}
  {{#unless linkMode}}
    <div class="SwitchForms">
      <div class="SwitchForms-line"></div>
    </div>
  {{/unless}}
{{/if}}


{{#if fb}}
  {{#unless linkMode}}
    <h5 style="padding: 30px">If you click "Log in with Facebook" and are not a pol.is user, you will be registered and you agree to the pol.is <a href="https://pol.is/tos" tabindex="112" > terms</a> and <a href="https://pol.is/privacy" tabindex="113" > privacy</a> policy</h5>
  {{/unless}}
{{/if}}

  </div> <!-- span -->

</div> <!-- row -->
</section> <!-- container -->
