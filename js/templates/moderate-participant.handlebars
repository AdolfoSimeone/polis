<div class="row">
  <div>
    <div class="panel panel-default">
    	<div class="panel-body"> 
        <div style="">
          {{#if showAccept}}
            <button id="accept" class="Btn Btn-moderateAccept"> Show in visualization </button>
          {{/if}}
          {{#if showReject}}
            <button id="reject" class="Btn Btn-moderateReject"> Hide in visualization</button> 
          {{/if}}
        </div>
        <div style="margin-top: 15px;">
          {{#if facebook}}
            <div> 
              <a href="{{facebook.fb_link}}" target="_blank">{{facebook.fb_name}}
              &nbsp;<i class="fa fa-facebook"></i>
              </a>
            </div> 
            <img 
              src="https://graph.facebook.com/v2.2/{{facebook.fb_user_id}}/picture?width=64&height=64"
              width="50px"
              style="margin: 8px 0px; padding: 3px; border: 1px solid lightgrey; border-radius: 3px"
              >
              <div> {{facebook.location}}</div> 
          {{/if}} {{!-- facebook --}}
          {{#if twitter}}
            <div style="margin-top: 15px">
              <div> 
                <a href="https://twitter.com/{{twitter.screen_name}}" target="_blank">
                  @{{twitter.screen_name}}
                &nbsp;<i class="fa fa-twitter"></i> 
                </a> 
              </div> 
              <img 
                src="/twitter_image?id={{twitter.twitter_user_id}}" 
                width="50px"
                style="margin: 8px 0px; padding: 3px; border: 1px solid lightgrey; border-radius: 3px"
              >
              <div>{{twitter.name}}</div>
              <div><em> {{twitter.followers_count}} Followers </em></div>   {{!-- these are stale currently because we havent written code to keep the twitter info cache fresh --}}
              {{!-- <div>{{#if twitter.verified}} Verified by twitter{{else}} not verified by twitter {{/if}}</div> --}}
              <div>{{twitter.location}}</div>
              
            </div>
          {{/if}} {{!-- twitter --}}
        </div>
    	</div>
    </div> 
  </div>
</div>