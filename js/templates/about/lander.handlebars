        }

        $.ajax({
          type: "POST",
          url: urlPrefix + "v3/einvites",
          contentType: "application/json; charset=utf-8",
          headers: {
              //"Cache-Control": "no-cache"  // no-cache
              "Cache-Control": "max-age=0"
          },
          xhrFields: {
