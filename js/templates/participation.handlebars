<section class="custom_container_for_large_screens" style="margin-bottom: 0px; margin-top:10px"> 


<div class="row ">
  <div class="
  clickDeselectsHull
  col-xs-offset-0 col-xs-12
  col-sm-offset-0 col-xs-12
  col-md-offset-0 col-md-12
  col-lg-offset-0 col-lg-12
  "
  style="padding-left: 0px; padding-right: 0px"
  > {{! fake container}}
    <div class="col-sm-8 col-md-7 conversationViewHeadline" >

    {{#unless useBannerHeader}}
      {{#if showLogoAndBreadCrumbInHeader}}
          <div class="HeadingA"><a href="pol.is"><img width="164px" src="https://pol.is/polis_logo_2.png" alt="">
          </a> <a style="vertical-align: middle; font-size: 18px;"href="/s/{{context}}">/s/{{context}}</a></div>
      {{else}}
        {{#if showLogoInHeader}}
          <div class="HeadingA"><img width="164px" src="https://pol.is/polis_logo_2.png" alt=""></div>
        {{/if}}
      {{/if}}
    {{/unless}}
    
    {{#if is_owner}}
    <div style="padding: 10px 0px 20px 0px">
        <a href="share{{url_name}}" class="Btn Btn-alt" ><i class="fa fa-link"></i>&nbsp;SHARE</a>
        <a href="{{url_moderate}}" class="Btn Btn-alt" >ADMIN</a>
        {{#if is_active}}
          <a id="closeConversationButton" class="Btn Btn-alt" style="cursor:pointer">CLOSE</a>
        {{ else }}
          <a id="reopenConversationButton" class="Btn Btn-alt" style="cursor:pointer">REOPEN</a>
        {{/if}}
        {{#if no_vis}}
          <a href="{{url_force_vis}}" class="Btn Btn-alt" >SEE VIS</a>
        {{/if}}

        {{!-- <a id="getDataButton" class="Btn Btn-alt hidden-xs" style="cursor:pointer"><i class="fa fa-cloud-download "></i>&nbsp;DATA</a> --}}
    </div>
    {{/if}}
    {{!-- {{/ifNotEmbedded}} --}}
    {{#ifDefined topic}}
      <h3 class="HeadingA" title="Conversation topic">{{topic}}
        {{#unless is_active}}
        <span class="no_you_vote" style="
         color: white;
         background-color: rgb(231, 76, 60);
         /* font-size: 0.7em; */
         /* padding: .2em; */
         font-size: 20px;
         padding: 0px 10px;
         border-radius: 3px;
         position: relative;
         top: -5px;
         left: 6px;
        ">closed</span>
      {{/unless}}
      </h3>
      {{/ifDefined}}
      {{#ifDefined description}}
        <p style="border-left: 4px solid #2980b9; padding-left: 10px; font-family: chaparral-pro; word-wrap:break-word;" title="Conversation description"> {{{description}}} </p>
      {{/ifDefined}}
      {{#if link_url}}
      <p style="border-left: 4px solid #2980b9; padding-left: 10px; font-family: chaparral-pro; word-wrap:break-word;">{{linkExternal link_url link_url}}</p>
      {{/if}}

    </div>
  </div> {{! /fake container }}
</div> {{! /row }}

