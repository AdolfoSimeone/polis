<section class="custom_container_for_large_screens" style="margin-bottom: 0px;"> 

<div class="row ">
  <div class="
  col-xs-offset-0 col-xs-12
  col-sm-offset-0 col-xs-12
  col-md-offset-0 col-md-12
  col-lg-offset-0 col-lg-12
  "> {{! fake container}}
    <div class="col-sm-8 col-md-6 conversationViewHeadline" >
    {{!-- {{#ifNotEmbedded}} --}}
    {{#if is_owner}}
    <div style="padding: 10px 0px 20px 0px">
        <a href="share{{url_name}}" class="Btn Btn-alt" ><i class="fa fa-link"></i>&nbsp;SHARE</a>
        <a href="{{url_moderate}}" class="Btn Btn-alt" >MODERATE</a>
        {{#if is_active}}
          <a id="closeConversationButton" class="Btn Btn-alt" style="cursor:pointer">CLOSE</a>
        {{ else }}
          <a id="reopenConversationButton" class="Btn Btn-alt" style="cursor:pointer">REOPEN</a>
        {{/if}}
        <a id="getDataButton" class="Btn Btn-alt hidden-xs" style="cursor:pointer"><i class="fa fa-cloud-download "></i>&nbsp;DATA</a>
    </div>
    {{/if}}
    {{!-- {{/ifNotEmbedded}} --}}
      <h3 class="HeadingA" title="Conversation topic">{{topic}}
        {{#unless is_active}}
        <span class="no_you_vote" style="
         color: white;
         background-color: rgb(231, 76, 60);
         /* font-size: 0.7em; */
         /* padding: .2em; */
         font-size: 20px;
         padding: 0px 10px;
         border-radius: 3px;
         position: relative;
         top: -5px;
         left: 6px;
        ">closed</span>
      {{/unless}}
      </h3>
      <p style="border-left: 4px solid #2980b9; padding-left: 10px; font-family: chaparral-pro; word-wrap:break-word;" title="Conversation description"> {{description}} </p>
      {{#if link_url}}
      <p style="border-left: 4px solid #2980b9; padding-left: 10px; font-family: chaparral-pro; word-wrap:break-word;">{{linkExternal link_url link_url}}</p>
      {{/if}}

    </div>
  </div> {{! /fake container }}
</div> {{! /row }}

<div id="controlTabs" class="row"> {{! may get no-gutter class on xs }}
<div class="
col-xs-offset-0 col-xs-12
col-sm-offset-0 col-xs-12
col-md-offset-0 col-md-12
col-lg-offset-0 col-lg-12
"> {{! fake container}}
  {{! overflow:hidden Since we remove the overflow:hidden on the carousel, and have to hide it at some layer to prevent the whole page becoming super wide. }}

  <div {{! column }}
    class="col-xs-12 col-xs-offset-0 col-sm-offset-0 col-sm-6 col-md-5 col-lg-4"
    {{#ifEmbedded}}
    {{#ifIos}}
    style="max-width:270px" {{! prevent carousel from resizing window when we're in an iframe on iOS (320 - (25*2)) to leave room for margins}}
    {{/ifIos}}
    {{/ifEmbedded}}
    > 

    <div class="tabbable"
    > {{! Only required for left/right tabs }}

      {{view conversationTabs}}


      <div class="tab-content">
        <div class="tab-pane" id="analyze" style="
        background-color: white;
        border-style: solid;  border-top: 1px solid lightgrey; border-left: 1px solid lightgrey;
        border-right: 3px solid lightgrey ;
        border-bottom: 3px solid lightgrey;
        border-radius: 7px;
        ">
          {{view conversationStatsHeader}}
          {{! BEGIN PILLS }}
          <div class="tabbable">
            {{! #if hasMetadata
            <ul class="nav nav-pills nav-justified hidden-xs">
              <li class="active small"><a href="#query_results_hiddenxs" id="query_results_pill" data-toggle="tab">Comments</a></li>
              <li><a href="#metadata_eyes" id="metadata_pill" data-toggle="tab" class="small">Participant Info</a></li>
            </ul>
            }}
            <div class="tab-content" style="">
              <div class="tab-pane active" id="query_results_hiddenxs">
                {{view analyzeGlobalView}}
                <div class="query_results_div" class="hidden-xs">
                </div> {{! query results div }}
              </div>
              <div class="tab-pane" id="metadata_eyes">
                <div class="alert alert-info alert-dismissable" style="margin-top: 20px">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <p> All participants are shown by default. Clicking on an answer below will cause participants who chose that answer to fade out. This makes it easier to identify patterns of agreement and disagreement in those participants who remain. </p>
                </div>
                {{view metadataQuestionsView}}
              </div>
            </div>
          </div> {{! END PILLS }}
        </div> {{! analyze tab pane }}

        <div class="tab-pane polis-tab-pane" id="group">
          {{view analyzeGroupView}}
        </div> {{! analyze tab pane }}

        <div class="tab-pane polis-tab-pane" id="legend">
          {{view legendView}}
        </div>


        <div
          class="tab-pane active"
          id="commentView"
          >
          {{view commentView}}
        </div>
        <div
          class="tab-pane write-pane"
          id="commentForm"
          >
          {{view commentForm}}
        </div>
      </div> {{! /tab content }}
    </div> {{! /tabbable }}
  </div> {{! /column }}


