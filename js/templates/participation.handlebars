<div class="wrap {{#if use_background_content_class}}background_content{{/if}}">
  
{{#ifNotEmbedded}}
{{> header}}
{{/ifNotEmbedded}}
{{#ifTrial}}
  {{#if is_owner}}
    {{> banner}}
  {{else}}
    {{#if pp}}
    {{> banner_pp}}
    {{/if}}
  {{/if}}
