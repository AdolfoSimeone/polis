  <div class="darkPanel"> {{! BEGIN FOOTER}}
    {{#if showLogoInFooter}}
    <div class="flexbox align-items-flex-end">
      <a
        href="{{logo_href}}"
        target="_blank"
        >
        <img
          width="100px"
          src="https://pol.is/polis_logo_2.png" {{! was 164px}}
          alt=""
          >
      </a>
      <div class="flex-grow-2">
      </div>
      {{> linkPrivacy}}
      {{> linkTos}}
    </div>
    {{/if}}
    <div class="flexbox align-items-flex-end">
      {{#if showLogoInFooter}}
        <div class="flex-grow-2">
        </div>
        {{> linkAddPolis}}
        <div class="flex-grow-2">
        </div>
      {{else}}
        {{> linkAddPolis}}
        <div class="flex-grow-2">
        </div>
        {{> linkPrivacy}}
        {{> linkTos}}
      {{/if}}
    </div>
  </div> {{! END FOOTER}}

{{!  ------------ END FOOTER ---------------  }}

</div> {{! END PARTICIPATION VIEW DIV }}
