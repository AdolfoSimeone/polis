<div
  class="
    conversationViewRoot
    darkPanel
    clickDeselectsHull
    {{#if use_background_content_class}}
      background_content
    {{/if}}
  "
  style="
    max-width: 1000px; {{!-- check pixel ratio? --}}
    margin: auto; {{!-- use flexbox rather than auto, or add a container for this container? --}}
    margin-top: 20px;
    margin-bottom: 20px;
    border-radius: 10px;
    border: 1px solid rgba(151,151,151,1);
  ">

  <div style="display: none"> {{!-- delete? --}}
    {{view conversationTabs}}
  </div>

  {{!-- ======================== BEGIN HEADER ======================== --}}

  <div>
    <p style="
      display: inline;
    ">
      Share this discussion:
    </p>
    <i class="fa fa-facebook"></i>
    <i class="fa fa-twitter"></i>
    <div style="
      float: right;
    ">
      <i class="fa fa-question-circle"></i>
    </div>
  </div>

  <div class="clickDeselectsHull">
    {{#unless useBannerHeader}}
      {{#if showLogoAndBreadCrumbInHeader}}
          <div class="HeadingA">
            <a href="pol.is">
              <img width="164px" src="https://pol.is/polis_logo_2.png" alt="">
            </a>
            <a
              style="vertical-align: middle; font-size: 18px;"
              href="/s/{{context}}">
              /s/{{context}}
            </a>
          </div>
      {{else}}
        {{#if showLogoInHeader}}
          <div class="HeadingA">
            <img width="164px" src="https://pol.is/polis_logo_2.png" alt="">
          </div>
        {{/if}}
      {{/if}}
    {{/unless}}

    {{#if is_owner}}
    <div style="padding: 10px 0px 20px 0px">
      <a href="share{{url_name}}" class="Btn Btn-alt" >
        <i class="fa fa-link"></i>&nbsp;SHARE
      </a>
      <a href="{{url_moderate}}" class="Btn Btn-alt" >
        ADMIN
      </a>
      {{#if is_active}}
        <a
          id="closeConversationButton"
          class="Btn Btn-alt"
          style="cursor:pointer"
          >
          CLOSE
        </a>
      {{ else }}
        <a
          id="reopenConversationButton"
          class="Btn Btn-alt"
          style="cursor:pointer"
          >
          REOPEN
        </a>
      {{/if}}
    </div>
    {{/if}}

    {{#ifDefined topic}}
    <h3 class="HeadingA" title="Conversation topic">
      {{topic}}
      {{#unless is_active}}
        <span class="no_you_vote" style="
         color: white;
         background-color: rgb(231, 76, 60);
         font-size: 20px;
         padding: 0px 10px;
         border-radius: 3px;
         position: relative;
         top: -5px;
         left: 6px;
        ">closed</span>
      {{/unless}}
    </h3>
    {{/ifDefined}}
    {{#ifDefined description}}
    <p
      style="
        border-left: 4px solid #2980b9;
        padding-left: 10px;
        font-family: chaparral-pro;
        word-wrap:break-word;
      "
      title="Conversation description"
    >
    {{{description}}}
    </p>
    {{/ifDefined}}
    {{#if link_url}}
    <p
      style="
        border-left: 4px solid #2980b9;
        padding-left: 10px;
        font-family: chaparral-pro;
        word-wrap:break-word;
      ">
      {{linkExternal link_url link_url}}
    </p>
    {{/if}}
  </div>

  {{!-- ======================== WRITING / VOTING ======================== --}}

  <div id="controlTabs" class="clickDeselectsHull">
    {{view commentForm}}
    {{view readReactView}}
    <div id="vis_sibling_above_tab_content">
    </div>
    <div
      id="visualization_parent_div"
      class="lightPanel"
      style="text-align: right; visibility: hidden"
      >
      <div
        id="visualization_div"
        class="vis_container"
        >
      </div>
    </div> {{! /visualization_parent_div }}
    <div
      class="darkPanel"
      style="text-align: center"
      >
      {{view groupSelectionView}}
    </div>
    {{!--   <div class="darkPanel">
      <div
        class="lightPanel"
        id="analyze"
        style="overflow: hidden"
        >
      {{view analyzeGlobalView}}
    </div> --}}
    <div
      class="lightPanel polis-tab-pane"
      style="overflow: hidden"
      id="group"
      >
      {{view analyzeGroupView}}
    </div>
  </div> {{! /tab content }}

  {{!-- ======================== SOCIAL ======================== --}}

  {{#unless hasFbAndTw}}
  <div
    id="socialButtons"
    style="
      margin-top: 20px;
      border: 1px dashed rgb(184, 184, 184);
      border-radius: 11px;
      padding: 10px;
      display: none; {{! waiting to be shown }}
    ">
    <div style="width: 80%;">
      <em>
        Connect to see friends and followers in the visualization, and to be seen by others.
      </em>
    </div>
    <div>
      {{#unless hasFacebook}}
        <button class="facebookButton" style="font-size: 14px;">
          <i class="fa fa-facebook-square"></i>&nbsp; Connect With Facebook
        </button>
      {{/unless}}
      {{#unless hasTwitter}}
        <button class="twitterButton" style="font-size: 14px;">
          <i class="fa fa-twitter" style="color: white"></i>&nbsp; Connect With Twitter
        </button>
      {{/unless}}
    </div>
  {{/unless}} {{! /hasFbOrTw }}

  {{!-- ======================== FOOTER ======================== --}}

  {{#if showLogoInFooter}}
  <div class="flexbox align-items-flex-end">
    <a
      href="{{logo_href}}"
      target="_blank"
      >
      <img
        width="100px"
        src="https://pol.is/polis_logo_2.png" {{! was 164px}}
        alt=""
        >
    </a>
    <div class="flex-grow-2">
    </div>
    {{> linkPrivacy}}
    {{> linkTos}}
  </div>
  {{/if}}

  <div class="flexbox align-items-flex-end">
    {{#if showLogoInFooter}}
      <div class="flex-grow-2"></div>
      {{> linkAddPolis}}
      <div class="flex-grow-2"></div>
    {{else}}
      {{> linkAddPolis}}
      <div class="flex-grow-2"></div>
      {{> linkPrivacy}}
      {{> linkTos}}
    {{/if}}
  </div>

</div> {{!-- if the # of divs is right, this ends ptpt view --}}
