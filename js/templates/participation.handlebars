<div
  class="
  conversationViewRoot
  darkPanel
  clickDeselectsHull
  {{#if use_background_content_class}}
  background_content
  {{/if}}
  "
  style="
    max-width: 768px; {{!-- check pixel ratio? --}}
    margin: auto; {{!-- use flexbox rather than auto, or add a container for this container? --}}
  "> {{! PARTICIPATION VIEW DIV }}

  {{#if useBannerHeader}}
    {{> headerWhatIsPolis}}
  {{/if}}

<div
  class="clickDoesNotDeselectHull"
  style="display: none"
>
  {{view conversationTabs}}
  </div>

{{!  ------------ BEGIN TOPIC AND DESCRIPTION ---------------  }}

<div class="
  clickDeselectsHull
  "
  style="
    padding-left: 0px;
    padding-right: 0px
    ">
    <div class="conversationViewHeadline">
    {{#unless useBannerHeader}}
      {{#if showLogoAndBreadCrumbInHeader}}
          <div class="HeadingA">
            <a href="pol.is">
              <img
                width="164px"
                src="https://pol.is/polis_logo_2.png"
                alt=""
                >
            </a>
            <a
              style="
                vertical-align: middle;
                font-size: 18px;"
              href="/s/{{context}}"
              >
            /s/{{context}}
            </a>
          </div>
      {{else}}
        {{#if showLogoInHeader}}
          <div class="HeadingA">
            <img
              width="164px"
              src="https://pol.is/polis_logo_2.png"
              alt=""
              >
          </div>
        {{/if}}
      {{/if}}
    {{/unless}}

    {{#if is_owner}}
    <div style="padding: 10px 0px 20px 0px">
      <a
        href="share{{url_name}}"
        class="Btn Btn-alt"
        style="margin-right: 20px
        ">
        <i class="fa fa-link">
        </i>
        &nbsp;SHARE
      </a>
      <a
        href="{{url_moderate}}"
        class="Btn Btn-alt"
        style="margin-right: 20px
        ">
        ADMIN
      </a>
      {{#if is_active}}
        <a
          id="closeConversationButton"
          class="Btn Btn-alt"
          style="cursor:pointer; margin-right: 20px; text-decoration: none;"

          >
          CLOSE
        </a>
      {{ else }}
        <a
          id="reopenConversationButton"
          class="Btn Btn-alt"
          style="cursor:pointer; margin-right: 20px"
          >
          REOPEN
          </a>
      {{/if}}
      {{#if no_vis}}
        <a
          href="{{url_force_vis}}"
          class="Btn Btn-alt"
          style="margin-right: 20px"
          >
          SEE VIS
          </a>
      {{/if}}

    </div>
    {{/if}}
    {{!-- {{/ifNotEmbedded}} --}}

    <div style="margin: 10px 0px">
      <button class="facebookShareButton userWillShareOnFacebook">
        <i class="fa fa-facebook-square"></i>
        &nbsp;Share
      </button>
      {{#if fbShareCount}}
        <span class="arrow_box">{{fbShareCount}}</span>
      {{/if}}

      <button class="twitterShareButton userWillShareOnTwitter">
        <i class="fa fa-twitter"></i>
        &nbsp;Tweet
      </button>
      {{#if twitterShareCount}}
        <span class="arrow_box">{{twitterShareCount}}</span>
      {{/if}}
    </div>

    {{#ifDefined topic}}
      <h3
        class="HeadingA"
        title="Conversation topic">
        {{topic}}
        {{#unless is_active}}
        <span class="no_you_vote" style="
         color: white;
         background-color: rgb(231, 76, 60);
         /* font-size: 0.7em; */
         /* padding: .2em; */
         font-size: 20px;
         padding: 0px 10px;
         border-radius: 3px;
         position: relative;
         top: -5px;
         left: 6px;
        ">closed</span>
      {{/unless}}
      </h3>
      {{/ifDefined}}
      {{#ifDefined description}}
        <p
          title="Conversation description"
          style="
            border-left: 4px solid #2980b9;
            padding-left: 10px;
            font-family: chaparral-pro;
            word-wrap:break-word;
          ">
          {{{description}}}
        </p>
      {{/ifDefined}}
      {{#if link_url}}
        <p
          style="
            border-left: 4px solid #2980b9;
            padding-left: 10px;
            font-family: chaparral-pro;
            word-wrap:break-word;
          ">
        {{linkExternal link_url link_url}}
        </p>
      {{/if}}
    </div>
  </div> {{! /fake container }}

{{!  ------------ BEGIN MAIN CONTENT ---------------  }}

