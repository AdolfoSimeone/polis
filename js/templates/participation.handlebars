{{!  ------------ VOTING PANEL ---------------  }}
{{view readReactView}}

{{#unless hasFbAndTw}}
<div
  id="socialButtonsUnderReadReact"
  class=""
  style="
    margin-left: 8px;
    margin-bottom: 20px;
    display: none; {{! waiting to be shown }}
  ">
  <p style="font-size: 14px;">
    {{s.socialConnectPrompt}}
  </p>
  <div>
    {{#unless hasFacebook}}
      <button class="facebookButton">
        <span class="socialButtonText">
          <i class="fa fa-facebook-square"></i>&nbsp; {{s.connectFbButton}}
        </span>
      </button>
    {{/unless}}

    {{#unless hasTwitter}}
      <button class="twitterButton">
      <span class="socialButtonText">
