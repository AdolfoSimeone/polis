    </i>
  </p>
</div>

<div id="vis_sibling_above_tab_content"></div>

<div
  id="visualization_parent_div"
  class="lightPanel clickDoesNotDeselectHull"
  style="text-align: right; visibility: hidden"
  >
  <div
    id="visualization_div"
    class="vis_container clickDoesNotDeselectHull"
    >
  </div>
</div>
<div
  class="darkPanel clickDoesNotDeselectHull"
  style="text-align: center"
  >
  {{view groupSelectionView}}
</div>

<div id="carouselPane" class="tabbable darkPanel clickDoesNotDeselectHull unselectable"
  style="
    margin: 0px 0px 10px 0px;
  "> {{! Only required for left/right tabs }}
  <div
    class="tab-content"
{{!--     style="min-height: 200px"
 --}}    >
    <div
      class="tab-pane"
      id="legend"
      >
      {{view legendView}}
    </div>
    <div
      class="tab-pane lightPanel"
      style="overflow: hidden"
      id="analyze"
      >
      {{view analyzeGlobalView}}
    </div> {{! analyze tab pane }}
    <div
      class="tab-pane lightPanel"
      style="overflow: hidden"
      id="group"
      >
      {{view analyzeGroupView}}
    </div> {{! analyze tab pane }}
{{!--     <div
      class="tab-pane lightPanel"
      id="infoSlidePane"
      >
      {{view conversationInfoSlideView}}
    </div> --}}
