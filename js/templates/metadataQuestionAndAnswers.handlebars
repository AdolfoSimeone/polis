<div class="panel panel-default">

<div class="panel-heading">
	{{key}} {{#if required}} <span style="color:red">*</span>{{/if}}
</div>
{{#if allowDelete}}
	{{#button method="deleteQuestion" tag="a"}}
		 &nbsp;<i class="icon-remove"></i>
	{{/button}}
{{/if}}

<ul class="list-group">
{{collection}}
</ul>

{{#if allowCreate}}
<ul class="nobullets">
	<li>
		<div class="add_answer_form">			
			<form>
				<input style="width: 50%; margin-top:10px" name="answerInput" type="text" placeholder="A choice, e.g., 'NYC' or 'Boston'"></input>
			</form>
		</div>
	</li>
</ul>
{{/if}}

</div>