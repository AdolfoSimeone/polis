<div class="panel panel-default">

<div class="panel-heading">
	{{#if required}} <span style="color:red">*</span>{{/if}}
	{{key}}
	{{#if allowDelete}}
		<button class="deleteQuestion">
			 &nbsp;<i class="icon-remove"></i>
		</button>
	{{/if}}
</div>

<ul class="list-group">
{{view answersCollectionView}}
</ul>


{{#if allowCreate}}
<ul class="nobullets">
	<li>
		<div class="add_answer_form">			
			<form>
				<input style="width: 50%; margin-top:10px" name="answerInput" type="text" placeholder="A choice, e.g., 'NYC' or 'Boston'"></input>
			</form>
		</div>
	</li>
</ul>
{{/if}}

</div>